---
pageable: true
per_page: 10
---
<h1>My Coding Journey</h1>

<div class="container">
	<%= image_tag 'media/screen.jpg', class: 'banner' %>
</div>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page, class: 'link' %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article, class: 'link_article_title' %></h2>
  <h3><%= article.date.strftime('%b %e') %></h3>
  <%=article.summary(150)%>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page, class: 'link' %></p>
  <% end %>
<% end %>
